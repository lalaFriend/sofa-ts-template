{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "./node_modules/**/*.ts",
      "node_modules/**"
    ]
  },
  "rules": {
    "no-implicit-dependencies": [true, ["containers", "utils", "components", "config"]],
    "no-submodule-imports":[true,"containers", "utils", "antd", "components", "config", "redux-saga", "history"],
    "ordered-imports":false,
    "object-literal-sort-keys":false,
    "member-access":false,
    "jsx-no-lambda":false
  }
}
