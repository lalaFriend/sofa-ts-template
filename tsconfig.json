{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "baseUrl": "./",
      "paths": {
        "components/*": ["./src/components/*"],
        "containers/*": ["./src/containers/*"],
        "utils/*": ["./src/utils/*"],
        "config/*": ["./src/config/*"],
        "moment$": ["moment/moment.js"]
      },
      "experimentalDecorators": true
  },
  "include": [
      "./*.d.ts",
      "./src/**/*"
  ]
}